@model EmployeeDTO
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Add Employee</h1>
    <form class="forms-sample" method="post" asp-action="Create">
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" maxlength="156" style="width:350px;">
            <span class="text-danger" asp-validation-for="Name" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Surname"></label>
            <input class="form-control" asp-for="Surname" maxlength="156" style="width:350px;">
            <span class="text-danger" asp-validation-for="Surname" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="BirthDate"></label>
            <input class="form-control" asp-for="BirthDate" style="width:350px;">
            <span class="text-danger" asp-validation-for="BirthDate" type="text"></span>
            <span class="text-danger d-none" id="BirthDateExtra" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Pin"></label>
            <input class="form-control" asp-for="Pin" maxlength="8" style="width:350px;">
            <span class="text-danger" asp-validation-for="Pin" type="text"></span>
        </div>
         <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Serie"></label>
            <input class="form-control" asp-for="Serie" maxlength="4" style="width:350px;">
            <span class="text-danger" asp-validation-for="Serie" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="SerialNumber"></label>
            <input class="form-control" asp-for="SerialNumber" min="0" style="width:350px;">
            <span class="text-danger" asp-validation-for="SerialNumber" type="text"></span>
            <span class="text-danger d-none" type="text" id="serial-number-extra"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="DepartmentId"></label>
            <select asp-for="DepartmentId" asp-items="@ViewBag.DepartmentSelectList"></select>
            <span class="text-danger" asp-validation-for="DepartmentId"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2" id="submit-create">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

