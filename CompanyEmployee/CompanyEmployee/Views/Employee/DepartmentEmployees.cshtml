@model Paginate<EmployeeDTO>
@{
    ViewData["Title"] = "DepartmentEmployees";
    int count = (Model.CurrentPage - 1) * 3 + 1;
}


<div class="container">
    <div class="row">
        <div class="justify-content-between d-flex mt-3 justify-content-between" style="width:100%;">
            <div>
                <h1>@Model.Datas.FirstOrDefault().Department.Name Employees</h1>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Employee Name
                        </th>
                        <th class="text-end">
                            Settings
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var employee in Model.Datas)
                        {
                            <tr>
                                <td class="text-white">
                                    @count
                                </td>
                                <td class="text-white">
                                    @employee.Name
                                </td>
                                <td class="d-flex justify-content-end gap-1">
                                    <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-Id="@employee.Id">
                                        Detail
                                    </a>
                                    <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-Id="@employee.Id">
                                        Update
                                    </a>
                                    <form method="post" asp-action="Delete" asp-route-Id="@employee.Id" style="display:inline-block">
                                        <button class="btn btn-danger btn-sm" type="submit">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            count++;
                        }
                    }

                </tbody>
            </table>
        </div>

        <div class="row my-3">
            <nav aria-label="...">
                @if (Model != null)
                {
                    if (Model.TotalPage > 1)
                    {
                        <ul class="pagination">
                            <li class="page-item @(Model.HasPrevious ? "" : "disabled") ">
                                <a class="page-link" asp-controller="employee"
                           asp-action="Index"
                           asp-route-page="1">
                                    <i class="fa-solid fa-angles-left"></i>
                                </a>
                            </li>
                            <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                                <a class="page-link" asp-controller="employee"
                           asp-action="DepartmentEmployees"
                           asp-route-departmentId="@Model.Datas.FirstOrDefault().DepartmentId"
                           asp-route-page="@(Model.CurrentPage-1)">
                                    <i class="fa-solid fa-angle-left"></i>
                                </a>
                            </li>
                            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                            {
                                <li class="page-item @(i==Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-controller="employee"
                           asp-action="DepartmentEmployees"
                           asp-route-departmentId="@Model.Datas.FirstOrDefault().DepartmentId"
                           asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                                <a class="page-link" asp-controller="employee"
                           asp-action="DepartmentEmployees"
                           asp-route-departmentId="@Model.Datas.FirstOrDefault().DepartmentId"
                           asp-route-page="@(Model.CurrentPage+1)">
                                    <i class="fa-solid fa-angle-right"></i>
                                </a>
                            </li>
                            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                                <a class="page-link" asp-controller="employee"
                           asp-action="DepartmentEmployees"
                           asp-route-departmentId="@Model.Datas.FirstOrDefault().DepartmentId"
                           asp-route-page="@(Model.TotalPage)">
                                    <i class="fa-solid fa-angles-right"></i>
                                </a>
                            </li>
                        </ul>
                    }
                }

            </nav>
        </div>
    </div>
</div>




